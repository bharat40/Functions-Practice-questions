#include <stdio.h> // function to check whether entered number is even or odd
int check(int);
int main()
{
    int num;
    printf("Enter a number : ");
    scanf("%d", &num);
    // function call
    int ch;
    ch = check(num);
    return 0;
}

int check(int n)
{
    if (n % 2 == 0)
    {
        return printf("number entered is even");
    }
    else
    {
        return printf("number entered is odd");
    }
    return 0;
}
